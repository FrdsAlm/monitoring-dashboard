{
    "welcomeFile": "/index.html",
    "authenticationMethod": "route",
    "routes": [
        {
            "source": "^/api/(.*)$",
            "target": "/api/$1",
            "destination": "srv-api",
            "authenticationType": "xsuaa",
            "csrfProtection": true
        },
        {
            "source": "^(.*)$",
            "target": "$1",
            "localDir": ".",
            "authenticationType": "xsuaa"
        }
    ]
}