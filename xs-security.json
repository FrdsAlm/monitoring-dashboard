{
    "xsappname": "monitoring-dashboard",
    "tenant-mode": "dedicated",
    "scopes": [
        {
            "name": "$XSAPPNAME.read",
            "description": "Read access to monitoring data"
        },
        {
            "name": "$XSAPPNAME.write",
            "description": "Write access to create/update logs and stats"
        },
        {
            "name": "$XSAPPNAME.admin",
            "description": "Full administrative access"
        }
    ],
    "role-templates": [
        {
            "name": "Viewer",
            "description": "Read-only access to dashboard",
            "scope-references": [
                "$XSAPPNAME.read"
            ]
        },
        {
            "name": "Operator",
            "description": "Can post logs and stats",
            "scope-references": [
                "$XSAPPNAME.read",
                "$XSAPPNAME.write"
            ]
        },
        {
            "name": "Administrator",
            "description": "Full access including config management",
            "scope-references": [
                "$XSAPPNAME.read",
                "$XSAPPNAME.write",
                "$XSAPPNAME.admin"
            ]
        }
    ],
    "role-collections": [
        {
            "name": "Monitoring_Dashboard_Viewer",
            "description": "View dashboard data",
            "role-template-references": [
                "$XSAPPNAME.Viewer"
            ]
        },
        {
            "name": "Monitoring_Dashboard_Operator",
            "description": "View and post monitoring data",
            "role-template-references": [
                "$XSAPPNAME.Operator"
            ]
        },
        {
            "name": "Monitoring_Dashboard_Admin",
            "description": "Full administrative access",
            "role-template-references": [
                "$XSAPPNAME.Administrator"
            ]
        }
    ],
    "oauth2-configuration": {
        "credential-types": [
            "binding-secret",
            "x509"
        ],
        "token-validity": 43200,
        "redirect-uris": []
    }
}